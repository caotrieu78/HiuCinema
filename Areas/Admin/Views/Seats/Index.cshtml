@model IEnumerable<BookingCinema.Models.Seat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary"  asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NRow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NColumn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBooked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theater)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NRow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBooked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Theater.TheaterId)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.SeatId">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.SeatId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SeatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
